buildarch=8
_target='arm-none-eabi'
pkgname=${_target}'-toolchain-bin'
pkgver=12.2.rel
#compile_date=2021.10
pkgrel=1
pkgdesc="The GNU Compiler Collection Toolchain for (${_target})"
arch=('aarch64')
license=('GPL')
url="https://developer.arm.com/"
depends=('ncurses5-compat-libs')
source=("https://developer.arm.com/-/media/Files/downloads/gnu/${pkgver}${pkgrel}/binrel/arm-gnu-toolchain-${pkgver}${pkgrel}-${arch}-${_target}.tar.xz")
#https://developer.arm.com/-/media/Files/downloads/gnu/12.2.rel1/binrel/arm-gnu-toolchain-12.2.rel1-aarch64-arm-none-eabi.tar.xz?rev=04bfc790b30b477fab2621438ab231a7&hash=31BC9F062982D1A76B7ABC2353824AB573AE00C4
sha256sums=('7ee332f7558a984e239e768a13aed86c6c3ac85c90b91d27f4ed38d7ec6b3e8c')

#prepere() {
#}
package() {
	mkdir -p ${pkgdir}/usr/local/
	cp -a ${srcdir}/arm-gnu-toolchain-${pkgver}${pkgrel}-${arch}-${_target}/* ${pkgdir}/usr/local/
}
